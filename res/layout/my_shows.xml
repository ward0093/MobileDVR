<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/item_background"
              android:id="@+id/my_shows">

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_margin="@dimen/activity_horizontal_margin"
	    android:background="#00000000"
	    android:orientation="vertical" >
	    
        <Button
            android:id="@+id/myShowsMyScheduledRecordingsButton"
            style="@style/ShowInfoButton"
            android:layout_gravity="center"
            android:text="My Scheduled Recordings" />

        <Button
            android:id="@+id/myShowsMyRecordedShowsButton"
            style="@style/ShowInfoButton"
            android:layout_gravity="center"
            android:text="My Recorded Shows" />
	</LinearLayout>
        
</LinearLayout>