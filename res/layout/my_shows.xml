<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_shows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_background"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="#00000000"
        android:orientation="vertical" 
        android:gravity="center">
    </LinearLayout>

    <Button
        android:id="@+id/myShowsMyRecordedShowsButton"
        style="@style/ShowInfoButton"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="My Recorded Shows" />

    <Button
        android:id="@+id/myShowsMyScheduledRecordingsButton"
        style="@style/ShowInfoButton"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="My Scheduled Recordings" />

</LinearLayout>